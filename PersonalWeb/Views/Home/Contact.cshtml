@model PersonalWeb.Models.ContactModel
@{
    ViewData["Title"] = "Contáctame";
}

@if (ViewBag.Success != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}


<section class="contact-section">
    <div class="container">
        <h2 class="contact-title">📨 Send me a message</h2>

        @if (ViewBag.Message != null)
        {
            <div class="alert @(ViewBag.Message.Contains("successfully") ? "alert-success" : "alert-danger")" role="alert">
                @ViewBag.Message
            </div>
        }
        <p>Want to get in touch? Fill out the form and I’ll get back to you as soon as possible..</p>
  
        <form asp-action="Contact" method="post" class="contact-form">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" placeholder="Your full name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="your@email.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Message"></label>
                <textarea asp-for="Message" rows="5" placeholder="Your message..."></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <button type="submit" class="btn">Send message</button>

            @if (ViewBag.Success != null)
            {
                <p class="feedback">@ViewBag.Success</p>
            }
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
